<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainActivity">

    <Button
        android:id="@+id/walk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_baseline_directions_walk_24"
        android:text="@string/walk_button"
        tools:layout_editor_absoluteX="106dp"
        tools:layout_editor_absoluteY="132dp" />

    <Button
        android:id="@+id/map"
        android:layout_width="198dp"
        android:layout_height="48dp"
        android:layout_marginTop="44dp"
        android:drawableLeft="@drawable/ic_baseline_map_24"
        android:text="@string/map_button"
        app:layout_constraintTop_toBottomOf="@+id/walk"
        tools:layout_editor_absoluteX="107dp" />

    <Button
        android:id="@+id/statistics"
        android:layout_width="199dp"
        android:layout_height="49dp"
        android:layout_marginTop="44dp"
        android:drawableLeft="@drawable/ic_baseline_star_rate_24"
        android:text="@string/statistics_button"
        app:layout_constraintTop_toBottomOf="@+id/map"
        tools:layout_editor_absoluteX="107dp" />

</androidx.constraintlayout.widget.ConstraintLayout>